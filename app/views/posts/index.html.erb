<% provide(:title, "Posts") %>
<div class="text-center">
	<h1>member's only</h1>
</div>
<div class="container">
<% @posts.each do |p| %>
	<div class="row">
		<h2><%= p.content %></h2>
		<% if logged_in? %>
			<% user = User.find(p.user_id) %>
			<p>Written by: <%= user.name %></p>
		<% else %>
			<p>Log in to see author</p>
		<% end %>
	</div>
<% end %>
</div>